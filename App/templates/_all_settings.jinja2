    {%- endif -%}
  {%- endcall -%}
{%- endmacro -%}

{%- macro follow_times(fields) -%}
  {%- set field = fields.get('follow_times', none) -%}
  {%- call(part) settings_element_basic(field, visible='advanced', label='Follow same user again no more than N times') -%}
    {%- if part == 'description' -%}
