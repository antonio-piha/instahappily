        <div class="card mb-3">
          <div class="card-body">
            {{ all_settings.do_unfollow_non_followers(fields) }}
            {{ all_settings.unfollow_non_followers_amount(fields) }}
            {{ all_settings.unfollow_non_followers_unfollow_after(fields) }}
            {{ all_settings.unfollow_non_followers_style(fields) }}
            {{ all_settings.unfollow_non_followers_sleep_delay(fields) }}
          </div>
        </div>

      </div>
    </div>

  </div>
</div>

<div id="section-relationships" class="card-separator"></div>
<div class="card">
  <div class="card-header unique-color-dark">
    <h5 class="d-inline white-text m-0"><i class="fas fa-bullseye mr-3"></i>Target audience</h5>
    <h4 class="d-inline m-0 float-right">
      <a class="white-text d-inline mr-3" href="#section-unfollow"><i class="fas fa-angle-up"></i></a>
      <a class="white-text d-inline" href="#section-interactions"><i class="fas fa-angle-down"></i></a>
    </h4>
  </div>
  <div class="card-body">
    <div class="mb-3">Control your targeted audience by setting number of followers, following or posts users must have.</div>

    <div class="form-row">

      <div class="col-md-6">

        <div class="card mb-3">
          <div class="card-body">
            {{ all_settings.relationship_bounds_min_following(fields) }}
            {{ all_settings.relationship_bounds_max_following(fields) }}
          </div>
        </div>

          <div class="card mb-3 {{ get_visibility_classes('advanced') }}">
          <div class="card-body">
            {{ all_settings.relationship_bounds_min_posts(fields) }}
            {{ all_settings.relationship_bounds_max_posts(fields) }}
          </div>
        </div>

      </div>
      <div class="col-md-6">

        <div class="card mb-3">
          <div class="card-body">
            {{ all_settings.relationship_bounds_min_followers(fields) }}
            {{ all_settings.relationship_bounds_max_followers(fields) }}
          </div>
        </div>

        <div class="card mb-3 {{ get_visibility_classes('expert') }}">
          <div class="card-body">
            FFR is shorthand for "followers-following ratio"
            {{ all_settings.potency_ratio_positivness(fields) }}
            {{ all_settings.potency_ratio_followers_count(fields) }}
            {{ all_settings.potency_ratio_following_count(fields) }}
          </div>
        </div>

      </div>
    </div>

  </div>
</div>

<div id="section-interactions" class="card-separator"></div>
<div class="card">
  <div class="card-header unique-color-dark">
    <h5 class="d-inline white-text m-0"><i class="fas fa-compress-arrows-alt mr-3"></i>Direct interactions</h5>
