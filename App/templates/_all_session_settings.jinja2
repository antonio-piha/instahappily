<div id="section-ignores" class="card-separator"></div>
<div class="card">
  <div class="card-header unique-color-dark">
    <h5 class="d-inline white-text m-0"><i class="fas fa-fast-forward mr-3"></i>Ignore and skip users, hashtags, etc.</h5>
    <h4 class="d-inline m-0 float-right">
      <a class="white-text d-inline mr-3" href="#section-interactions"><i class="fas fa-angle-up"></i></a>
      <a class="white-text d-inline" href="#section-other"><i class="fas fa-angle-down"></i></a>
    </h4>
  </div>
  <div class="card-body">
    <div class="form-row">
      <div class="col-md-6">

        <div class="card mb-3">
          <div class="card-body">
            {{ all_settings.ignore_users_by_user_list(fields) }}
          </div>
        </div>

        <div class="card mb-3">
          <div class="card-body">
            {{ all_settings.exclude_friends_list(fields) }}
          </div>
        </div>

        <div class="card mb-3 {{ get_visibility_classes('advanced') }}">
          <div class="card-body">
            {{ all_settings.skip_private(fields) }}
            {{ all_settings.skip_private_percentage(fields) }}
            {{ all_settings.skip_no_profile_pic(fields) }}
            {{ all_settings.skip_no_profile_pic_percentage(fields) }}
          </div>
        </div>

      </div>

      <div class="col-md-6">

        <div class="card mb-3">
          <div class="card-body">
            {{ all_settings.skip_and_avoid_hashtags_list(fields) }}
