          </div>
        </div>

        <div class="card mb-3 {{ get_visibility_classes('advanced') }}">
          <div class="card-body">
            {{ all_settings.skip_business(fields) }}
            {{ all_settings.skip_business_percentage(fields) }}
            {{ all_settings.skip_business_categories(fields) }}
            {{ all_settings.dont_skip_business_categories(fields) }}
          </div>
        </div>

        <div class="card mb-3 {{ get_visibility_classes('expert') }}">
          <div class="card-body">
            {{ all_settings.skip_first_top_posts(fields) }}
